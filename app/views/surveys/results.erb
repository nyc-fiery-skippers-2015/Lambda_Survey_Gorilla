<div>
  <div>This survey was taken <%= survey.taken_surveys.length %> times</div>
  <br>
  <% questions.each do |question| %>
    <div><%= question.body %></div>
    <% question.choices.each do |choice| %>
      <div><%= choice.choice %>: <%= choice.choices_users.length %></div>
      <div class="chart">
        <div style="width: <%= 5*choice.choices_users.length%>px; height: 10px;  "></div>
      </div>
    <% end %>
      <br>
  <% end %>
</div>
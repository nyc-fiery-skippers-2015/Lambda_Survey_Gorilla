<div class='single-survey' id="<%= survey.id %>">
  <div> <%= survey.title %> </div>
  <div class="all_questions">
    <div>
      <form action="/surveys/<%= survey.id %>/submit" method="post">
      <% if survey.questions %>
        <% survey.questions.each do |q|  %>
          <%= erb :'questions/_show-single-questions', locals: {question: q, survey: survey}  %>
        <% end %>
      <% end %>
      <input type="submit" value="Submit Survey"/>
    </form>
    </div>
  </div>
  <div class='question'>

  </div>
  <div>
    <a class="add_question" href="/surveys/<%= survey.id %>/questions/new">Add new question</a>
  </div>
  <br>
  <br>
  <br>
</div>

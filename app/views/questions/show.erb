<div class='single_question' id='<%= question.id %>'>
  <div class='question-body'>Question: <%=question.body%></div>
  <div class="question-block" id="<%=question.id%>">
    <div>
      <% if choices %>
        <% choices.each do |c| %>
          <%= erb :'/choices/_show-single-choices', locals:{choice: c, survey: survey, question: question} %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div><a class="edit-question" href ="/surveys/<%=survey.id%>/questions/<%=question.id%>/edit">Edit Question</a></div>
  <br>
  <div><a href="/surveys/<%= survey.id %>">Back to Survey</a></div>
</div>
